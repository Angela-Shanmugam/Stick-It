<body>
    <div class="container-form " class="theForm">
      <form class="addPostForm" action="/postit" method="post" role="form" enctype="application/x-www-form-urlencoded">
        <legend> <h1 class="form-title"> Add a Post It </h1> </legend>

        <label for="title"> Title of Post It </label>
        <input class="form-control" type="text" id="title" name="title">

        <label for="description"> Description of Post It </label>
        <input class="form-control" type="text" id="description" name="description">


        {{#if automaticallyPinned}}
        <label for="pinned">
            <input type="checkbox" id="pinned" name="pinned" checked="true"/> Already pinned for you!
        </label>
        {{else}}
          <label for="pinned">
            <input type="checkbox" id="pinned" name="pinned"/> Urgent: Pin it!
        </label>
        {{/if}}

        <select name="weekday" id="weekday" class="form-select postItSelect">
            <option value="monday">Monday</option>
            <option value="tuesday">Tuesday</option>
            <option value="wednesday">Wednesday</option>
            <option value="thursday">Thursday</option>
            <option value="friday">Friday</option>
            <option value="saturday">Saturday</option>
            <option value="sunday">Sunday</option>
        </select>

        <select name="category" id="category" class="form-select postItSelect">
        {{#each category}}
        <option value={{category_id}}>{{title}}</option>
        {{/each}}
        </select> 

        <button type="submit" class="btn btn-primary postItBtn"> Submit </button>
      </form>
    </div>
</body>

