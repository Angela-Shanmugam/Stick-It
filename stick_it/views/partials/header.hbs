<header>


    {{!-- VISITOR ABOUT US --}}
    {{#if displayVisitorNavBar}}
        <div id="nav-bar-top">
        {{!-- LOGO --}}
        <div id="logo">
            <a href={{homePath}} class="logo" id="pin-name"><img class="logoImg" src="images/kim.png" alt="">Pin-It</a>
         </div>

            {{!-- LOGIN AND SIGN UP --}}
            <div id="nav-bar-user-setting">
                    <nav class="navbar navbar-homepage">

     {{!-- home page options  --}}
    {{#if displayHomePage}}

        {{#if alertMessage}}
            <div class="alert alert-primary d-flex align-items-center" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img"
                aria-label="Warning:">
                <path
                d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                </svg>
                <div>
        {{/if}}
                </div>
            </div>
        {{/if}}
    <nav class="navbar navbar-homepage">

        <div class="navbar-user-container">
        <a href="" class="btn btn-outline-secondary float-left" data-toggle="modal" data-target="#loginModal">Login</a>
        <a href="" class="btn btn-outline-secondary float-left" data-toggle="modal" data-target="#registerModal">Register</a>

        <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-scrollable" role="document">
                <div class="modal-content">
                    <div class="modal-header bg-light">
                        <h5 class="modal-title" id="loginModalLabel">Login</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="/login" method="POST" role="form" enctype="application/x-www-form-urlencoded">
                            <label for="email">Email:</label>
                            <br>
                            <input type="text" id="email" name="email" required="true">
                            <br>
                            <label for="password">Password:</label>
                            <br>
                            <input type="password" id="password" name="password" required="true">
                            <br>
                            <button type="submit" class="btn btn-primary" id="loginBtn">Log in</button>
                        </form>
        
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn  btn-outline-secondary" data-dismiss="modal">Close</button>
                    </div> 
                </div> 
            </div>
        </div>

     
        <div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-scrollable" role="document">
                <div class="modal-content">
                    <div class="modal-header bg-light">
                        <h5 class="modal-title" id="registerModalLabel">Register</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="/register" method="POST" role="form" enctype="application/x-www-form-urlencoded">
                            <label for="email">Email:</label>
                            <br>
                            <input type="text" id="email" name="email" required="true">
                            <br>
                            <label for="username">Username:</label>
                            <br>
                            <input type="text" id="username" name="username" required="true">
                            <br>
                            <label for="password">Password:</label>
                            <br>
                            <input type="password" id="password" name="password" required="true">
                            <br>
                            <button type="submit" class="btn btn-primary" id="loginBtn">Log in</button>
                        </form>
                    </div> 
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn  btn-outline-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>     
    </nav>

    </div>     
    </div>
        {{!-- ABOUT US  --}}
        <div id="nav-bar-visitor">
            <ul>
            {{#each visitorNavBar}}
                <li class="navbar-visitor" id={{id}}><a class="nav-link-visitor" href="{{path}}">{{title}}</a></li>
            {{/each}}
            </ul>
        </div>
        </div>
    {{/if}}

    {{#if displayLoggedInUser}}
    {{!-- CRUD OPERATIONS --}}
    <div id="flex-container">
    <div id="logo">
        <form id="home-logo" action="/home" method="post" role="form">
            <button id="home-logo" type="submit"><img class="logoImg" src="images/kim.png" alt=""></button>
        </form>
    </div>
    <div id="nav-bar-log-out">
        <ul class="nav-bar-log-out">
            {{#each logoutSettingsNavBar}}
                <li class="navbar-item" id={{id}}><a class="nav-link-log-out" href="{{path}}">{{title}}</a></li>
            {{/each}}
        </ul>
    </div>
    </div>
</div>
        <div id="navbar-logged-in-options">
            {{#each loggedInOptionsNavBar}}
                <li class="navbar-item" id={{id}}><a class="nav-link-log-out" href="{{path}}">{{title}}</a></li>
            {{/each}}

    </div>


    {{/if}}


</header>